.dashboard
  display inline-block
  vertical-align middle
  width 50%
  height 100%
  overflow auto

  &__title
    font-weight bold
    margin-left 20px

  &__add
    margin-top 10px

  &__items
    margin 0
    margin-top 10px
    list-style none
    padding-left 20px

  &__item
    margin-top 3px
    margin-bottom 10px

  &__label
    display block
    width 100px

  &__input
    text-transform capitalize

  &__wrapper
    padding-left 20px

  &__cancel
    margin-right 15px
